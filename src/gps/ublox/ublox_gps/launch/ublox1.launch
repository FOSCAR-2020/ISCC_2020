<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <arg name="node_name" default="gps_front"/>
  <arg name="param_file_name" doc="name of param file, e.g. rover" default="nmea1"/>
  <arg name="output" default="screen" />
  <arg name="respawn" default="true" />
  <arg name="respawn_delay" default="30" />
  <arg name="clear_params" default="true" />

  <node pkg="ublox_gps" type="ublox_gps" name="$(arg node_name)"
        output="$(arg output)" 
        clear_params="$(arg clear_params)"
        respawn="$(arg respawn)" 
        respawn_delay="$(arg respawn_delay)">
    <rosparam command="load" 
              file="$(find ublox_gps)/config/$(arg param_file_name).yaml" />
  </node>

  <node pkg="gps_common" type="utm_odometry_front_node" name="utm_odometry_front_node">
  </node>

  <node pkg="race" type="path_collector.py" name="path_collector">
  </node>
</launch>
