<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <arg name="path" />
  <include file="$(find rviz_visualization)/launch/rviz.launch"/>
  <node pkg="rviz_visualization" type="global_map_plotter.py" name="global_map_plotter" args="$(arg path).txt" />

  <node pkg="pure_pursuit" type="pure_pursuit" name="pure_pursuit" />
  <node pkg="pure_pursuit" type="coordinate2pos" name="coordinate2pos" />
  <node pkg="utmk_coordinate" type="wgs84_to_utmk.py" name="wgs84_to_utmk" />
  
  <arg name="bag" />
  <node pkg="rosbag" type="play" name="player" output="screen" args="--clock $(find rviz_visualization)/bag_files/$(arg bag).bag -r 3"/>


</launch>
